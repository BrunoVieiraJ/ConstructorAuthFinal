@model Construcao.Models.Produto

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Produto</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProdutoId" />
            <div class="form-group">
                <label asp-for="Pro_Nome" class="control-label"></label>
                <input asp-for="Pro_Nome" class="form-control" />
                <span asp-validation-for="Pro_Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pro_Desc" class="control-label"></label>
                <input asp-for="Pro_Desc" class="form-control" />
                <span asp-validation-for="Pro_Desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QntEstoque" class="control-label"></label>
                <input asp-for="QntEstoque" class="form-control" />
                <span asp-validation-for="QntEstoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FK_CategoriaId" class="control-label"></label>
                <select asp-for="FK_CategoriaId" class="form-control"
                        asp-items="@ViewBag.Categorias"></select>
                <span asp-validation-for="FK_CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
